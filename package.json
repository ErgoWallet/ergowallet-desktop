{
  "private": true,
  "name": "ergo-wallet",
  "productName": "Ergo Wallet",
  "version": "0.1.10",
  "description": "Ergo Wallet",
  "license": "GPL-3.0",
  "keywords": [
    "ergo",
    "ergoplatform",
    "wallet",
    "cryptocurrency",
    "blockchain",
    "decentralized exchange",
    "dex"
  ],
  "homepage": "https://ergowallet.io",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --verbose",
    "clean": "rimraf node_modules/",
    "compile": "tsc",
    "start": "yarn build && electron ./app/main/electron.js",
    "start:debug": "yarn build && electron --inspect ./app/main/electron.js",
    "build": "rimraf app/ && yarn compile && webpack --config webpack.config.js",
    "dist": "rimraf dist/ && electron-builder --publish never",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "main": "./main/electron.js",
  "devDependencies": {
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^26.0.2",
    "@types/lodash": "^4.14.161",
    "@types/node": "12",
    "@types/reach__router": "^1.3.4",
    "@types/recharts": "^1.8.14",
    "@types/styled-components": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "copy-webpack-plugin": "5.1.1",
    "cross-env": "7.0.2",
    "css-loader": "^3.5.3",
    "electron": "10.1.3",
    "electron-builder": "22.8.1",
    "eslint": "^7.0.0",
    "eslint-plugin-react": "^7.20.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "4.0.4",
    "jest": "26.6.3",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "26.4.1",
    "ts-loader": "^6.2.2",
    "typescript": "4.0.3",
    "url-loader": "^4.1.0",
    "webpack": "4.41.2",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@ergowallet/ergowallet-wasm": "0.1.1",
    "@material-ui/core": "4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "4.0.0-alpha.56",
    "@reach/router": "^1.3.3",
    "@reduxjs/toolkit": "^1.4.0",
    "@types/react-redux": "^7.1.9",
    "bignumber.js": "^9.0.0",
    "bip32": "^2.0.5",
    "bip39": "^3.0.2",
    "clipboard-copy": "3.1.0",
    "electron-store": "6.0.0",
    "lodash": "4.17.15",
    "node-fetch": "2.6.1",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "react-redux": "^7.2.1",
    "recharts": "^1.8.5",
    "semver": "7.3.2",
    "styled-components": "^5.1.1",
    "typeface-roboto": "^0.0.75",
    "typeface-roboto-mono": "^0.0.75",
    "uuid": "8.3.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-babel",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json",
        "diagnostics": true
      }
    }
  },
  "build": {
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      {
        "from": "app",
        "to": ".",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "appId": "io.ergowallet.desktop",
    "artifactName": "ergo-wallet-${os}-${arch}-${version}.${ext}",
    "compression": "normal",
    "asar": true,
    "extraResources": [],
    "mac": {
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Network",
      "icon": "resources/icons",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 180,
          "y": 190
        },
        {
          "x": 380,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
