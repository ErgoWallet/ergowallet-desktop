{
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "name": "ergo-wallet",
  "productName": "Ergo Wallet",
  "version": "0.1.13",
  "description": "Ergo Wallet",
  "license": "GPL-3.0",
  "keywords": [
    "ergo",
    "ergoplatform",
    "wallet",
    "cryptocurrency",
    "blockchain",
    "decentralized exchange",
    "dex"
  ],
  "homepage": "https://ergowallet.io",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "clean": "rimraf node_modules/",
    "compile": "tsc",
    "start": "yarn build && electron ./app/main/electron.js",
    "start:debug": "yarn build && electron --inspect ./app/main/electron.js",
    "build": "rimraf app/ && yarn compile && webpack --config webpack.config.js",
    "dist": "rimraf dist/ && electron-builder --publish never",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "main": "./main/electron.js",
  "devDependencies": {
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^26.0.2",
    "@types/lodash": "^4.14.161",
    "@types/node": "18",
    "@types/reach__router": "^1.3.4",
    "@types/recharts": "^1.8.14",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "copy-webpack-plugin": "6.4.1",
    "cross-env": "7.0.2",
    "css-loader": "5.2.4",
    "electron": "25.2.0",
    "electron-builder": "22.10.5",
    "eslint": "8.49.0",
    "eslint-plugin-react": "^7.20.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "4.5.2",
    "jest": "27.0.4",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "27.0.3",
    "ts-loader": "9.4.4",
    "typescript": "5.2.2",
    "url-loader": "^4.1.0",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@ergowallet/ergowallet-wasm": "0.2.1",
    "@mui/icons-material": "^5.14.9",
    "@mui/material": "^5.14.9",
    "@reach/router": "^1.3.3",
    "@reduxjs/toolkit": "1.5.0",
    "@types/react-redux": "^7.1.9",
    "bignumber.js": "^9.0.0",
    "bip32": "2.0.6",
    "bip39": "^3.0.2",
    "clipboard-copy": "3.2.0",
    "electron-store": "6.0.0",
    "lodash": "4.17.21",
    "node-fetch": "2.6.7",
    "qrcode": "1.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-qrcode": "0.3.6",
    "react-redux": "^7.2.1",
    "recharts": "2.0.9",
    "semver": "7.3.2",
    "typeface-roboto": "^0.0.75",
    "typeface-roboto-mono": "^0.0.75",
    "uuid": "8.3.0"
  },
  "build": {
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      {
        "from": "app",
        "to": ".",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "appId": "io.ergowallet.desktop",
    "artifactName": "ergo-wallet-${os}-${arch}-${version}.${ext}",
    "compression": "normal",
    "asar": true,
    "extraResources": [],
    "mac": {
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Network",
      "icon": "resources/icons",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 180,
          "y": 190
        },
        {
          "x": 380,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
