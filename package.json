{
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "name": "ergo-wallet",
  "productName": "Ergo Wallet",
  "version": "0.2.0-beta",
  "description": "Ergo Wallet",
  "license": "GPL-3.0",
  "keywords": [
    "ergo",
    "ergoplatform",
    "wallet",
    "cryptocurrency",
    "blockchain",
    "decentralized exchange",
    "dex"
  ],
  "homepage": "https://ergowallet.io",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "clean": "rimraf src-tauri/target/ && rimraf node_modules/",
    "compile": "tsc",
    "start": "npm run build && electron ./app/main/electron.js",
    "start:debug": "npm run build && electron --inspect ./app/main/electron.js",
    "build": "rimraf app/ && npm run compile && webpack --config webpack.config.js",
    "dist": "rimraf dist/ && electron-builder --publish never",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "dev": "webpack-dev-server --mode=development",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tauri": "tauri"
  },
  "main": "./main/electron.js",
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.2",
    "@storybook/addon-essentials": "^7.5.3",
    "@storybook/addon-interactions": "^7.5.3",
    "@storybook/addon-links": "^7.5.3",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/addon-themes": "^7.5.3",
    "@storybook/blocks": "^7.5.3",
    "@storybook/react": "^7.5.3",
    "@storybook/react-webpack5": "^7.5.3",
    "@storybook/testing-library": "^0.2.2",
    "@tauri-apps/cli": "^2.0.0-alpha.17",
    "@testing-library/react": "^10.0.4",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^8",
    "@types/jest": "^29.5.7",
    "@types/lodash": "^4.14.161",
    "@types/node": "18",
    "@types/recharts": "^1.8.14",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "copy-webpack-plugin": "6.4.1",
    "cross-env": "7.0.2",
    "css-loader": "5.2.4",
    "electron": "^25.9.3",
    "electron-builder": "24.6.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-storybook": "^0.6.15",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "4.5.2",
    "jest": "29.7.0",
    "rimraf": "^3.0.2",
    "storybook": "^7.5.3",
    "style-loader": "^1.2.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "url-loader": "^4.1.0",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@ergowallet/ergowallet-wasm": "0.2.1",
    "@mui/icons-material": "5.14.11",
    "@mui/material": "5.14.11",
    "@reduxjs/toolkit": "^1.9.7",
    "@scure/bip32": "^1.3.2",
    "@scure/bip39": "^1.2.1",
    "@tauri-apps/api": "^2.0.0-alpha.13",
    "@tauri-apps/plugin-http": "^2.0.0-alpha.6",
    "@tauri-apps/plugin-store": "^2.0.0-alpha.5",
    "@types/react-redux": "^7.1.9",
    "bignumber.js": "^9.0.0",
    "clipboard-copy": "3.2.0",
    "electron-store": "6.0.0",
    "lodash": "4.17.21",
    "node-fetch": "2",
    "qrcode": "1.4.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-qrcode": "0.3.6",
    "react-redux": "^7.2.1",
    "react-router": "^6.18.0",
    "react-router-dom": "^6.18.0",
    "recharts": "^2.9.3",
    "semver": "^7.5.4",
    "typeface-roboto": "^0.0.75",
    "typeface-roboto-mono": "^0.0.75",
    "uuid": "8.3.0"
  },
  "build": {
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      {
        "from": "app",
        "to": ".",
        "filter": [
          "**/*"
        ]
      },
      "package.json"
    ],
    "appId": "io.ergowallet.desktop",
    "artifactName": "ergo-wallet-${os}-${arch}-${version}.${ext}",
    "compression": "normal",
    "asar": true,
    "extraResources": [],
    "mac": {
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "category": "Network",
      "icon": "resources/icons",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 180,
          "y": 190
        },
        {
          "x": 380,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
