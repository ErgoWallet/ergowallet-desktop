    "skipLibCheck": true,
    "jsx": "react",
    "outDir": "./app",
    "rootDir": "./src",
    "esModuleInterop": true,
    "types": ["react", "jest"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
